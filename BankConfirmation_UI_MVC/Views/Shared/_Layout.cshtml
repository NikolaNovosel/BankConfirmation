<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bank Confirmation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/my.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankConfirmation_UI_MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="home-menu">
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <img src="https://www.addiko.rs/static/themes/addiko-rs/images/logo.png" width="240" height="30" alt="Addiko Bank Srbija" itemprop="image">
                    </a>
                </li>
            </ul>
        </div>
        <div class="menu-bar">
            <ul>
                <li>
                    <a href="">CLIENT</a>
                    <div class="sub-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                        <ul>
                            <li><a asp-controller="Client" asp-action="Create">Add new client</a></li>
                            <li><a asp-controller="Client" asp-action="Index">List of clients</a></li>
                            <li><a asp-controller="Client" asp-action="Confirmations">Client confirmations</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="">ACCOUNT</a>
                    <div class="sub-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                        <ul>
                            <li><a asp-controller="Account" asp-action="Index">List of accounts</a></li>
                            <li><a asp-controller="Account" asp-action="SelectByClient">Select By Client</a></li>
                            <li><a asp-controller="Account" asp-action="Closed">Closed accounts</a></li>
                            <li><a asp-controller="Account" asp-action="Confirmations">Account confirmations</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="">CREDIT CARD</a>
                    <div class="sub-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                        <ul>
                            <li><a asp-controller="CreditCard" asp-action="Create">Create new credit card</a></li>
                            <li><a asp-controller="CreditCard" asp-action="Index">List of credit cards</a></li>
                            <li><a asp-controller="CreditCard" asp-action="Confirmations">Credit card confirmations</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="">DEPOSIT</a>
                    <div class="sub-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                        <ul>
                            <li><a asp-controller="Deposit" asp-action="Create">Create new deposit</a></li>
                            <li><a asp-controller="Deposit" asp-action="Index">List of deposits</a></li>
                            <li><a asp-controller="Deposit" asp-action="Confirmations">Deposit confirmations</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="">OVERDRAFT</a>
                    <div class="sub-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                        <ul>
                            <li><a asp-controller="Overdraft" asp-action="Create">Create new limit</a></li>
                            <li><a asp-controller="Overdraft" asp-action="Index">List of overdraft</a></li>
                            <li><a asp-controller="Overdraft" asp-action="Confirmations">Overdraft confirmations</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="">PAYMENT</a>
                    <div class="sub-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                        <ul>
                            <li><a asp-controller="Payment" asp-action="Create">Create new transaction</a></li>
                            <li><a asp-controller="Payment" asp-action="Index">List of payments</a></li>
                            <li><a asp-controller="Payment" asp-action="Confirmations">Payment confirmations</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer-position" class="border-top footer text-muted">
        <div class="footer-container">
            &copy; 2024 - BankConfirmation - <a class="link-style" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
